{
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/*.spec.jsx"]
    }
  ],
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-throw-literal": 0,
    "implicit-arrow-linebreak": 0,
    "consistent-return": 0,
    "func-names": 0,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "no-console": "off"
  }
}
